<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/agree_root_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:background="@drawable/login_bg" >


    <LinearLayout
        android:id="@+id/agree_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
        <!--android:background="@drawable/agreement_bg_line"  -->


        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="300.0dip"
            android:layout_height="100.0dip"
            android:layout_gravity="center"
            android:layout_marginTop="25.0dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. 개인 정보의 수집 및 이용 목적 □개인 정보를 생존하는 개인에 관란 정보로써 당시 회원 개인을 식별할 수 있는 정보(당해 정보만으로는 특정 개인을 식별할 수 없더라도 다른 정보와 용이하게 결합하여 식별할 수 있는 것을 포함)를 말합니다. 당사가 수집한 개인 정보를 다음의 목적을 위해 활용합니다."
                    android:textColor="#ffffff"
                    android:textSize="11.0dip" />
            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip" />
            <!-- android:src="@drawable/main_bg_line" --> 
-

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="300.0dip"
            android:layout_height="100.0dip"
            android:layout_gravity="center"
            android:layout_marginTop="20.0dip" >
-

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. 개인 정보의 수집 및 이용 목적 □개인 정보를 생존하는 개인에 관란 정보로써 당시 회원 개인을 식별할 수 있는 정보(당해 정보만으로는 특정 개인을 식별할 수 없더라도 다른 정보와 용이하게 결합하여 식별할 수 있는 것을 포함)를 말합니다. 당사가 수집한 개인 정보를 다음의 목적을 위해 활용합니다."
                    android:textColor="#ffffff"
                    android:textSize="11.0dip" />
            </LinearLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/ImageView01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"/>
            <!-- android:src="@drawable/main_bg_line" --> 
-

        <RelativeLayout
            android:layout_width="300.0dip"
            android:layout_height="35.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15.0dip" >

            <ImageView
                android:id="@+id/check_agree1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/agreement_checkbox" 
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.0dip"
                android:layout_toRightOf="@id/check_agree1"
                android:text="위 이용약관에 동의합니다."
                android:textColor="#ffffff"
                android:textSize="12.0dip" />

            <Button
                android:id="@+id/check1_btn"
                android:layout_width="fill_parent"
                android:background="@drawable/empty"  
                android:layout_height="fill_parent"/>
        </RelativeLayout>
-

        <RelativeLayout
            android:layout_width="300.0dip"
            android:layout_height="35.0dip"
            android:layout_gravity="center_horizontal" >

            <ImageView
                android:id="@+id/check_agree2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/agreement_checkbox"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.0dip"
                android:layout_toRightOf="@id/check_agree2"
                android:text="위 개인정보 수집 이용안내 약관에 동의합니다."
                android:textColor="#ffffff"
                android:textSize="12.0dip" />

            <Button
                android:id="@+id/check2_btn"
                android:layout_width="fill_parent"
                android:background="@drawable/empty"  
                android:layout_height="fill_parent"/>
        </RelativeLayout>

        <Button
            android:id="@+id/continue_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="계속하기"
            android:layout_marginTop="10.0dip"/>
            <!-- android:background="@drawable/agreement_btn"  -->
    </LinearLayout>

</LinearLayout>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 