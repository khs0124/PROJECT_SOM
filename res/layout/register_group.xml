<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/register_group_bg"
    android:orientation="vertical"
    android:visibility="visible" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView01"
            android:layout_width="80dp"
            android:layout_height="37dp"
            android:src="@drawable/group_name" />

        <EditText
            android:id="@+id/group_name"
            android:layout_width="200dp"
            android:layout_height="37dp"
            android:background="@drawable/register_empty"
            android:hint="스터디 이름"
            android:inputType="textNoSuggestions"
            android:paddingLeft="10dp"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView02"
            android:layout_width="80dp"
            android:layout_height="37dp"
            android:src="@drawable/group_member" />

        <EditText
            android:id="@+id/member1"
            android:layout_width="200dp"
            android:layout_height="37dp"
            android:background="@drawable/register_empty"
            android:hint="ID(이메일)를 입력하세요"
            android:inputType="textNoSuggestions|textEmailAddress"
            android:paddingLeft="10dp"
            android:textSize="14sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/member2"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/register_empty"
        android:inputType="textNoSuggestions|textEmailAddress"
        android:paddingLeft="10dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/member3"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/register_empty"
        android:inputType="textNoSuggestions|textEmailAddress"
        android:paddingLeft="10dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/member4"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/register_empty"
        android:inputType="textNoSuggestions|textEmailAddress"
        android:paddingLeft="10dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/member5"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/register_empty"
        android:inputType="textNoSuggestions|textEmailAddress"
        android:paddingLeft="10dp"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/member6"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/register_empty"
        android:inputType="textNoSuggestions|textEmailAddress"
        android:paddingLeft="10dp"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="45dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/register"
            android:layout_width="112dp"
            android:layout_height="32dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/group_register" />

        <Button
            android:id="@+id/register_cancel"
            android:layout_width="112dp"
            android:layout_height="32dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/group_cancel" />
    </LinearLayout>

</LinearLayout>