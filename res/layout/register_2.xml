<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/register_bg"
    android:orientation="vertical"
    android:visibility="visible" >

    <ImageView
        android:id="@+id/imageView06"
        android:layout_width="172dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView01"
            android:layout_width="80dp"
            android:layout_height="37dp"
            android:src="@drawable/register_id" />

        <EditText
            android:id="@+id/input_email"
            android:layout_width="200dp"
            android:layout_height="37dp"
            android:background="@drawable/register_empty"
            android:hint="이메일"
            android:inputType="textNoSuggestions|textEmailAddress"
            android:paddingLeft="10dp"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView02"
            android:layout_width="80dp"
            android:layout_height="37dp"
            android:src="@drawable/register_pw" />

        <EditText
            android:id="@+id/input_password"
            android:layout_width="200dp"
            android:layout_height="37dp"
            android:background="@drawable/register_empty"
            android:hint="비밀번호"
            android:inputType="textNoSuggestions|textPassword"
            android:paddingLeft="10dp"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView03"
            android:layout_width="80dp"
            android:layout_height="37dp"
            android:src="@drawable/register_name" />

        <EditText
            android:id="@+id/input_name"
            android:layout_width="200dp"
            android:layout_height="37dp"
            android:background="@drawable/register_empty"
            android:hint="이름(최대 5자)"
            android:inputType="textNoSuggestions"
            android:paddingLeft="10dp"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView04"
            android:layout_width="80dp"
            android:layout_height="37dp"
            android:src="@drawable/register_name" />
        <!-- 생년월일 이미지로 바꿔야 함 -->

        <EditText
            android:id="@+id/input_birth"
            android:layout_width="200dp"
            android:layout_height="37dp"
            android:background="@drawable/register_empty"
            android:hint="생년월일(6자리)"
            android:inputType="textNoSuggestions|number"
            android:paddingLeft="10dp"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView05"
            android:layout_width="80dp"
            android:layout_height="37dp"
            android:src="@drawable/register_phone" />

        <EditText
            android:id="@+id/input_phoneNum"
            android:layout_width="200dp"
            android:layout_height="37dp"
            android:background="@drawable/register_empty"
            android:hint="010-0000-0000"
            android:inputType="textNoSuggestions|phone"
            android:paddingLeft="10dp"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/register"
            android:layout_width="112dp"
            android:layout_height="32dp"
            android:layout_marginRight="17dp"
            android:background="@drawable/register_register" />

        <Button
            android:id="@+id/register_cancel"
            android:layout_width="112dp"
            android:layout_height="32dp"
            android:layout_marginLeft="17dp"
            android:background="@drawable/register_cancel" />
    </LinearLayout>

</LinearLayout>